{
  "tilda": {
    "default": "tilda"
  },
  "tilda-autostart": {
    "requirements": "tilda",
    "check_available": [
      {
        "type": "file_exists",
        "file": "${HOME}/.config/autostart/Terminal.desktop"
      }
    ],
    "manual": [
      {
        "type": "write_to_file",
        "path": "${HOME}/.config/autostart/Terminal.desktop",
        "content": "[Desktop Entry]\nType=Application\nName=Dropdown Terminal (Tilda)\nExec=tilda\nX-GNOME-Autostart-enabled=true\n"
      }
    ]
  },
  "guake": {
    "default": "guake",
    "apk": null
  },
  "guake-configure": {
    "as_sudo": false,
    "requirements": "guake",
    "manual": [
      "guake --restore-preferences configs/guake_prefs"
    ]
  },
  "intellij": {
    "snap": "intellij-idea-{edition} --classic",
    "check_available": [
      {
        "type": "file_exists",
        "file": [
          "/snap/intellij-idea-community/current/bin/idea.sh",
          "/snap/intellij-idea-ultimate/current/bin/idea.sh"
        ]
      }
    ],
    "flavors": {
      "edition": [
        "community",
        "ultimate"
      ]
    }
  },
  "pycharm": {
    "snap": "pycharm-{edition} --classic",
    "check_available": [
      {
        "type": "file_exists",
        "file": [
          "/snap/pycharm-community/current/bin/pycharm.sh",
          "/snap/pycharm-professional/current/bin/pycharm.sh"
        ]
      }
    ],
    "flavors": {
      "edition": [
        "community",
        "professional"
      ]
    }
  },
  "git-cola": {
    "snap": "git-cola"
  },
  "gitkraken": {
    "snap": "gitkraken"
  },
  "spotify": {
    "snap": "spotify"
  },
  "skype": {
    "snap": "skype"
  },
  "gimp": {
    "pacman": "gimp",
    "snap": "gimp"
  },
  "bitwarden": {
    "snap": "bitwarden"
  },
  "xournal": {
    "snap": "xournal"
  },
  "dbeaver": {
    "pacman": "dbeaver",
    "snap": "dbeaver-ce"
  },
  "kontena-lens": {
    "snap": "kontena-lens --classic"
  }
}
